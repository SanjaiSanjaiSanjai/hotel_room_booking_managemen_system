{
  "compilerOptions": {
    "target": "ES2020",                  // modern JS output
    "module": "CommonJS",                // Node.js module system
    "rootDir": "./src",                  // your source code folder
    "outDir": "./dist",                  // compiled JS output folder
    "strict": true,                      // enable strict type checking
    "esModuleInterop": true,             // allow default imports
    "experimentalDecorators": true,      // TypeORM needs decorators
    "emitDecoratorMetadata": true,       // TypeORM needs metadata
    "skipLibCheck": true                 // faster build
  }
}
